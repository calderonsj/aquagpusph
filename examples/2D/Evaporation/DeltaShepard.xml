<sphInput>
    <Variables>
        <Variable name="dshepard" type="vec*" length="N" />
        <Variable name="dshepard_i" type="float*" length="N" />                    
    </Variables>

  <Tools>
    <Tool in="dshepard" name="Reinit dshepard" action="insert" after="cfd Reinit shepard" type="set" value="VEC_ZERO"/>
    <Tool entry_point="deltashepard" action="insert" after="cfd interactions" name="dshepard" path="deltashepard.cl" type="kernel"/>
    <Tool entry_point="deltashepardBI" action="insert" after="cfd BI interactions" name="dshepardBI" path="deltashepardBI.cl" type="kernel"/>
    <Tool entry_point="deltashepardSym" action="insert" after="right_cfd symmetry BI" name="right_dshepardSym" path="deltashepardSym.cl" type="kernel"/>
    <Tool entry_point="deltashepardSym" action="insert" after="left_cfd symmetry BI" name="left_dshepardSym" path="deltashepardSym.cl" type="kernel"/>
    <Tool entry_point="deltashepardSymBI" action="insert" after="right_dshepardSym" name="right_dshepardSymBI" path="deltashepardSymBI.cl" type="kernel"/>
    <Tool entry_point="deltashepardSymBI" action="insert" after="left_dshepardSym" name="left_dshepardSymBI" path="deltashepardSymBI.cl" type="kernel"/>
  </Tools>
</sphInput>